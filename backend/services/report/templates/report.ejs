<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= reportName %> - Reporte</title>
    <style>
      @page {
        size: A4 landscape;
        margin: 10mm;
      }
      body { font-family: 'Segoe UI', Arial, sans-serif; font-size: 9px; color: #222; background: #fff; margin: 0; padding: 10px; }
      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 2px solid #3a7bd5;
        margin-bottom: 12px;
        padding-bottom: 6px;
      }
      .logo {
        font-size: 16px;
        font-weight: bold;
        color: #3a7bd5;
        letter-spacing: 1px;
      }
      .report-title {
        font-size: 14px;
        font-weight: bold;
        color: #222;
        margin-bottom: 2px;
      }
      .desc {
        background: #eef3f7;
        border-radius: 4px;
        padding: 6px 10px;
        margin-bottom: 12px;
        font-size: 9px;
      }
      .meta {
        margin-bottom: 8px;
        font-size: 8px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 8px;
        margin-bottom: 12px;
        table-layout: fixed;
      }
      th, td {
        border: 1px solid #c2c2c2;
        padding: 4px 5px;
        text-align: left;
        word-wrap: break-word;
        overflow-wrap: break-word;
        font-size: 8px;
      }
      th {
        background: #3a7bd5;
        color: #fff;
        font-weight: bold;
        font-size: 9px;
      }
      tr:nth-child(even) td {
        background: #f7fafd;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <div class="logo">BiciIbagu√©</div>
      <div class="report-title">Reporte: <%= reportName %></div>
    </div>
    <div class="meta">
      <strong>Generado:</strong> <%= new Date().toLocaleString() %><br />
      <strong>Filtros:</strong> <%= JSON.stringify(filters || {}) %>
    </div>
    <table>
      <thead>
        <tr>
          <% if (columns && columns.length > 0) { %>
            <% columns.forEach(function(h) { %>
              <th><%= h %></th>
            <% }); %>
          <% } else { %>
            <th>No data</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% if (data && data.length > 0 && columns && columns.length > 0) { %>
          <% data.forEach(function(row) { %>
            <tr>
              <% columns.forEach(function(k) { %>
                <td><%= typeof row[k] === 'object' && row[k] !== null ? JSON.stringify(row[k]) : (row[k] !== undefined && row[k] !== null ? row[k] : '') %></td>
              <% }); %>
            </tr>
          <% }); %>
        <% } else { %>
          <tr><td>No data matching filters</td></tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
